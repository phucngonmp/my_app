
{
  "manifest_version": 3,
  "name": "Firebase Context Menu",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>",
    "https://*.firebaseio.com/",
    "https://*.googleapis.com/"],
  "action": {
    "default_popup": "popup.html"  }
}

